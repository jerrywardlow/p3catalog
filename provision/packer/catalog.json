{
    "variables": {
        "aws_access_key": "{{env `AWS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET`}}",
        "digitalocean_access_token": "{{env `DIGITALOCEAN_ACCESS_TOKEN`}}"
    },
    "builders": [{
        "name": "aws",
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-west-2",
        "source_ami": "ami-d732f0b7",
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "p3catalog {{timestamp}}"
    },
    {
        "name": "do",
        "type": "digitalocean",
        "api_token": "{{user `digitalocean_access_token`}}",
        "image": "ubuntu-14-04-x64",
        "region": "sfo2",
        "size": "512mb",
        "snapshot_name": "p3catalog-{{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [ "sleep 30" ]
    },
    {
        "type": "shell",
        "scripts": [
            "scripts/catalog.sh"
        ]
    }]
}
